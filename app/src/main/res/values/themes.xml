<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Meezan360" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!--        <item name="android:windowTranslucentNavigation">true</item>-->
        <item name="android:forceDarkAllowed" tools:targetApi="q">false</item>
        <item name="android:windowTranslucentStatus">true</item>

        <!-- Primary brand color. -->
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->

    </style>

    <!--    <style name="CustomSeekBarStyle" parent="Widget.AppCompat.SeekBar">-->
    <!--        <item name="tickMark">@drawable/green_tick</item>-->
    <!--        <item name="tickMarkTint">@color/purple_dark</item>-->
    <!--    </style>-->

    <style name="CustomExposedDropdownMenu" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu">
        <!-- Remove outline -->
        <item name="boxBackgroundMode">none</item>
        <!-- Set background color -->
        <item name="android:background">@drawable/custom_dropdown_background</item>
        <!-- Set end icon mode to custom icon -->
        <item name="endIconMode">custom</item>
        <!-- Set custom end icon -->
        <item name="endIconDrawable">@drawable/ic_custom_cross</item>
        <!-- Set custom end icon tint color -->
    </style>
    <!-- Base application theme. -->
    <style name="Base.Theme.Meezan360" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
    </style>


    <style name="textViewStyle">
        <item name="fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">@dimen/_8sdp</item>
        <item name="android:textStyle">bold</item>

    </style>
    <style name="AVLoadingIndicatorView">
        <item name="minWidth">48dip</item>
        <item name="maxWidth">48dip</item>
        <item name="minHeight">48dip</item>
        <item name="maxHeight">48dip</item>

    </style>

    <style name="MaterialThemeButtonNormal">

        <item name="android:paddingHorizontal" tools:targetApi="o">@dimen/_13sdp</item>
        <item name="android:paddingVertical" tools:targetApi="o">@dimen/_13sdp</item>
    </style>
    <style name="nav" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/purple_dark</item>
        <item name="colorPrimaryDark">@color/purple_dark</item>
        <item name="colorAccent">@color/purple_dark</item>
        <item name="android:listDivider">@color/purple_dark</item>
        <!--       <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>-->
        <item name="android:textColorPrimary">@color/purple_light</item>
        <item name="android:textColorSecondary">@color/purple_light</item>
        <item name="actionMenuTextColor">@color/purple_light</item>
        <!--        <item name="actionOverflowButtonStyle">@style/DrawerArrowStyle</item>-->
    </style>


    <style name="DialogTheme" parent="Theme.AppCompat.Light.Dialog">
        <item name="colorAccent">@color/purple_light</item>
    </style>


    <style name="mytoast">
        <item name="stTextBold">true</item>
        <item name="stTextColor">#fff</item>
        <item name="stFont">@font/montserrat_regular</item>
        <item name="stTextSize">14sp</item>
        <item name="stColorBackground">#fff</item>
        <item name="stSolidBackground">true</item>
        <item name="stStrokeWidth">3dp</item>
        <item name="stStrokeColor">#fff</item>
        <item name="stIconStart">@drawable/ic_tick</item>
<!--        <item name="stIconEnd">@drawable/ic</item>-->
        <item name="stLength">LONG</item>
        <item name="stGravity">top</item>
        <item name="stRadius">5dp</item>
    </style>
</resources>