<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp">


    <TextView
        android:id="@+id/tvRemarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:text="Excellent "
        android:textColor="#868686"
        android:textSize="@dimen/text_size_small"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBranches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:text="(No of Branches 80 | 85%)"
        android:textColor="#868686"
        android:textSize="@dimen/text_size_extra_small"
        app:layout_constraintStart_toEndOf="@+id/tvRemarks"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btnNoOfDays"
        android:layout_width="@dimen/_50sdp"
        android:layout_height="@dimen/_20sdp"
        android:layout_gravity="center"
        android:background="@drawable/custom_button_purple_gradient"
        android:text="1 to 30 Days"
        android:textColor="@color/white"
        android:textSize="@dimen/_6ssp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <com.loukwn.stagestepbar.StageStepBar
        android:id="@+id/stageStepBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        app:layout_constraintTop_toBottomOf="@+id/btnNoOfDays"
        app:ssb_animationDuration="500"
        app:ssb_crossAxisFilledTrackSize="@dimen/_2sdp"
        app:ssb_crossAxisUnfilledTrackSize="@dimen/_2sdp"
        app:ssb_filledThumbDrawable="@drawable/green_tick"
        app:ssb_filledTrackColor="@color/green"
        app:ssb_stageStepConfig="100,100,100"
        app:ssb_unfilledThumbColor="#BBBBBB"
        app:ssb_unfilledTrackColor="#BBBBBB" />

</androidx.constraintlayout.widget.ConstraintLayout>