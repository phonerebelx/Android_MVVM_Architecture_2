<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp">


    <TextView
        android:id="@+id/tvRemarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:text="Excellent "
        android:textColor="#868686"
        android:textSize="@dimen/padding_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBranches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:text="(No of Branches 80 | 85%)"
        android:textColor="#868686"
        android:textSize="@dimen/button_curve"
        app:layout_constraintStart_toEndOf="@+id/tvRemarks"
        app:layout_constraintTop_toTopOf="parent" />

    <com.shuhart.stepview.StepView
        android:id="@+id/stepView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="9dp"
        app:sv_nextStepCircleEnabled="true"
        app:sv_animationType="Line"
        app:sv_doneCircleRadius="11dp"
        app:sv_selectedTextColor="@color/green"
        app:sv_stepPadding="0dp"
        app:sv_selectedCircleRadius="11dp"
        app:sv_stepLineWidth="1dp"
        app:sv_stepNumberTextSize="12sp"
        app:layout_constraintTop_toBottomOf="@+id/tvBranches"/>




</androidx.constraintlayout.widget.ConstraintLayout>