<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/_10sdp">


    <TextView
        android:id="@+id/tvRemarks"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_gravity="center"
        android:text="Excellent "
        android:textColor="#868686"
        android:textSize="@dimen/padding_default"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tvBranches"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_2sdp"
        android:text="(No of Branches 80 | 85%)"
        android:textColor="#868686"
        android:textSize="@dimen/button_curve"
        app:layout_constraintStart_toEndOf="@+id/tvRemarks"
        app:layout_constraintTop_toTopOf="parent" />




    <com.loukwn.stagestepbar.StageStepBar
        android:id="@+id/stageStepBar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        app:layout_constraintTop_toBottomOf="@+id/tvBranches"
        app:ssb_animationDuration="500"
        app:ssb_crossAxisFilledTrackSize="@dimen/_2sdp"
        app:ssb_crossAxisUnfilledTrackSize="@dimen/_2sdp"
        app:ssb_filledThumbColor="@color/golden"
        app:ssb_filledTrackColor="@color/golden"
        app:ssb_stageStepConfig="20,20,20,20"
        app:ssb_unfilledThumbColor="#BBBBBB"
        app:ssb_unfilledTrackColor="#BBBBBB" />

</androidx.constraintlayout.widget.ConstraintLayout>